{
  "name": "frameless-electron-news-reader-desktop-app",
  "version": "1.0.0",
  "description": "This is a basic slider for desktop that pulls from a news feed. The whole \"gimmick\" about it is this frameless aesthetic I had envisioned. Will see if it actually looks/works as I imagined.",
  "main": "main.js",
  "dependencies": {},
  "devDependencies": {
    "electron": "^8.2.5",
    "electron-packager": "^14.2.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . cross-platform-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=NA --version-string.FileDescription=CE --version-string.ProductName=\"Cross Platform App\"",
    "package-linux": "electron-packager . cross-platform-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdc-cunningham/frameless-electron-news-reader-desktop-app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jdc-cunningham/frameless-electron-news-reader-desktop-app/issues"
  },
  "homepage": "https://github.com/jdc-cunningham/frameless-electron-news-reader-desktop-app#readme"
}
